{% if isPanel %}
    <div class="actuality-panel margin-component">
        {% for aktualita in this.getItems(data.Pocet, data.kategorie) %}
            <a href="{{ path('detail_aktuality', {'slug': aktualita.slug}) }}" class="text-decoration-none">
                <h3 class="h5 mb-1 fw-bold {{ loop.first == false ? 'mt-3' : 'mt-0' }}">{{ aktualita.Nadpis }}</h3>
                <time class="small text-secondary">{{ aktualita.DatumZverejneni|date('d.m.Y') }}</time>
            </a>
        {% endfor %}
    </div>
{% else %}
    <div class="margin-component position-relative">
        <a class="show-all-link button-style-1" href="{{ path('aktuality') }}">VÅ¡echny aktuality</a>

        <div class="aktuality-carousel" data-controller="carousel">
            <div class="carousel-container" data-carousel-target="container">
                {% for aktualita in this.getItems(data.Pocet, data.kategorie) %}
                    <div class="carousel-item-wrapper" data-carousel-target="item">
                        <a href="{{ path('detail_aktuality', {'slug': aktualita.slug}) }}" class="text-decoration-none actuality-item">
                            <img class="img-fluid mb-2 {{ aktualita.Obrazek ? '' : 'placeholder-image' }}" src="{{ aktualita.Obrazek ? aktualita.Obrazek.url : asset('images/logo-symbol.svg') }}" alt="" aria-labelledby="aktualita-{{ aktualita.slug }}">

                            <h3 class="h5 mt-2 mb-1 pt-2">{{ aktualita.Nadpis }}</h3>

                            <time class="small text-secondary">{{ aktualita.DatumZverejneni|date('d.m.Y') }}</time>

                            {% if aktualita.Tagy %}
                                <p class="mb-0 mt-2">
                                    {% for Tag in aktualita.Tagy %}
                                        <span class="tag">{{ Tag.Tag }}</span>
                                    {% endfor %}
                                </p>
                            {% endif %}
                        </a>
                    </div>
                {% endfor %}
            </div>

            <div class="aktuality-carousel-nav-arrows">
                <button type="button" class="aktuality-carousel-nav-arrow carousel-nav-prev disabled" data-carousel-target="prevArrow" data-action="click->carousel#scrollPrev">
                    <i class="bi bi-arrow-left"></i>
                </button>

                <span class="divider"></span>
                
                <button type="button" class="aktuality-carousel-nav-arrow carousel-nav-next" data-carousel-target="nextArrow" data-action="click->carousel#scrollNext">
                    <i class="bi bi-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>
{% endif %}
